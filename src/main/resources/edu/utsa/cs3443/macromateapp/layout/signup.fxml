<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.image.Image?>
<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="edu.utsa.cs3443.macromateapp.controller.LoginController"
           style="-fx-background-color: linear-gradient(to bottom right, #00b894, #00a3a3);">
    <VBox alignment="CENTER" spacing="14" maxWidth="460"
          style="-fx-background-color: white; -fx-background-radius: 14; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 22, 0, 0, 10);">
        <padding>
            <Insets top="34" right="34" bottom="30" left="34"/>
        </padding>

        <VBox alignment="CENTER" spacing="6">
            <!--
            <ImageView fitHeight="28" fitWidth="28" pickOnBounds="true" preserveRatio="true"/> -->
            <ImageView fitHeight="200" fitWidth="200" preserveRatio="true">
                <image>
                    <Image url="@../images/macromate_logo.png"/>
                </image>
            </ImageView>

            <Label text="Create Your Account">
                <font>
                    <Font size="22"/>
                </font>
            </Label>
            <Label text="Start your nutrition journey today" style="-fx-text-fill: #6b7280;"/>
        </VBox>

        <VBox spacing="8" alignment="CENTER_LEFT">
            <Label text="Full Name" style="-fx-text-fill: #374151;"/>
            <TextField fx:id="fullNameField" promptText="John Doe"
                       style="-fx-background-color: #f3f4f6; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: transparent;"/>
        </VBox>

        <VBox spacing="8" alignment="CENTER_LEFT">
            <Label text="Email" style="-fx-text-fill: #374151;"/>
            <TextField fx:id="signUpEmailField" promptText="your@email.com"
                       style="-fx-background-color: #f3f4f6; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: transparent;"/>
        </VBox>

        <VBox spacing="8" alignment="CENTER_LEFT">
            <Label text="Password" style="-fx-text-fill: #374151;"/>
            <PasswordField fx:id="signUpPasswordField" promptText="Create a password"
                           style="-fx-background-color: #f3f4f6; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: transparent;"/>
        </VBox>

        <VBox spacing="8" alignment="CENTER_LEFT">
            <Label text="Confirm Password" style="-fx-text-fill: #374151;"/>
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm your password"
                           style="-fx-background-color: #f3f4f6; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: transparent;"/>
        </VBox>

        <Button fx:id="createAccountButton" text="Create Account" maxWidth="1.7976931348623157E308"
                onAction="#handleSignUp"
                style="-fx-background-color: #059669; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: 700; -fx-padding: 10 14;"/>

        <HBox alignment="CENTER" spacing="6">
            <Label text="Already have an account?" style="-fx-text-fill: #6b7280;"/>
            <Hyperlink text="Sign in" onAction="#goToLogin" style="-fx-text-fill: #059669;"/>
        </HBox>

        <Label fx:id="errorLabel" text="" wrapText="true" visible="false"
               style="-fx-text-fill: #dc2626; -fx-font-weight: 600;"/>
    </VBox>
</StackPane>
